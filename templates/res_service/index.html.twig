{% extends 'base.html.twig' %}

{% block title %}Service{% endblock %}

{% block body %}
<div class="container">
    <br>
    <h1 class="text-white">Services</h1>
    <br>

    <table class="table table-dark table-striped">
        <thead>
        <tr>
            <th>Nom</th>
            <th>Description</th>
            <th>Type</th>
            <th>Prix</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for res_service in res_services %}
            <tr>
                <td>{{ res_service.nom }}</td>
                <td>{{ res_service.description }}</td>
                <td>{{ res_service.typeService }}</td>
                <td>{{ res_service.prix }}</td>
                <td>
                    <a href="{{ path('res_service_show', {'id': res_service.id}) }}"><i class="fa fa-search" style="font-size:26px;"></i></a>
                    <a href="{{ path('res_service_edit', {'id': res_service.id}) }}"><i class="fa fa-pencil-square" style="font-size:26px; color:orange"></i></a>
                    <a href="{{ path('res_service_delete', {'id': res_service.id}) }}"><i class="fa fa-minus-square" style="font-size:26px;color:red"></i></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <div class="text-align-left">
        <a href="{{ path('res_service_new') }}" type="button" class="btn btn-lg btn-primary">Ajouter</a>
    </div>
    <br>
</div>
{% endblock %}
