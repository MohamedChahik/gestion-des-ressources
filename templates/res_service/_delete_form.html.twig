    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ res_service.id) }}">
    <a class="btn btn-lg btn-primary" href="{{ path('res_service_index') }}">Retour aux services</a>
