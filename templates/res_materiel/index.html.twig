{% extends 'base.html.twig' %}

{% block title %}Materiel{% endblock %}

{% block body %}
<div class="container">
    <br>
    <h1 class="text-white">Materiels</h1>
    <br>

    <table class="table table-dark table-striped">
        <thead>
            <tr>
                <th>Nom</th>
                <th>Description</th>
                <th>Type</th>
                <th>Marque</th>
                <th>Prix</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for res_materiel in res_materiels %}
            <tr>
                <td>{{ res_materiel.nom }}</td>
                <td>{{ res_materiel.description }}</td>
                <td>{{ res_materiel.type }}</td>
                <td>{{ res_materiel.marque }}</td>
                <td>{{ res_materiel.prix }}</td>
                <td>
                    <a href="{{ path('res_materiel_show', {'id': res_materiel.id}) }}"><i class="fa fa-search" style="font-size:26px;"></i></a>
                    <a href="{{ path('res_materiel_edit', {'id': res_materiel.id}) }}"><i class="fa fa-pencil-square" style="font-size:26px; color:orange"></i></a>
                    <a href="{{ path('res_materiel_delete', {'id': res_materiel.id}) }}"><i class="fa fa-minus-square" style="font-size:26px;color:red"></i></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <div class="text-align-left">
        <a href="{{ path('res_materiel_new') }}" type="button" class="btn btn-lg btn-primary">Ajouter</a>
    </div>
    <br>
</div>
{% endblock %}
